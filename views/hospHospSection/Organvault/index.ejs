<%-include("../../partials/header");-%>
<style type="text/css">
	.container{
            margin-top: 8rem;
        }
</style>
<%- include("../../partials/Navbar"); -%>

<div class="container">
	<h2>Organ Vault</h2>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Hospital</th>
                  <th>Date</th>
                  <th>Donor Age</th>
                  <th>Type</th>
                  <th>Contact</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < organs.length; i++){ %>
                    <tr>
                      <td><%= i+1%></td>
                      <td><%= organs[i].hospital_name %></td>
                      <td><%= organs[i].date%></td>
                      <td><%= organs[i].donor_age%></td>
                      <td><%= organs[i].type%></td>
                      <td><%= organs[i].contact%></td>
                      <td><a href="#" class="btn btn-outline-danger">Request</a></td>

                    </tr>
                <% } %>
              </tbody>
            </table>
		</div>
	</div>
</div> 
<%-include("../../partials/footer");-%>